%REM
	Function FilePath
	Description:
		@Param: NotesDatabase.
		La vista de DataSource es una Constante
		@Return: String. Path de una NotesDatabase
%END REM

Function FilePath( db As NotesDatabase ) As String
	Dim nPos As Integer
	
	FilePath = ""
	nPos = Instr( db.FilePath, db.FileName )
	If nPos <> 0 Then
		FilePath = Left( db.FilePath, nPos -1 )
	End If
	
End Function




